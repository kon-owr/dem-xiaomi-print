<Window x:Class="MyWpfApp.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="域名详情" Height="600" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/> <!-- 顶部区域占 1/10 高度 -->
            <RowDefinition Height="10*"/> <!-- 底部区域占 10/10 高度 -->
        </Grid.RowDefinitions>

        <!-- 顶部区域：TextBox和Button -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> <!-- TextBox占大部分宽度 -->
                <ColumnDefinition Width="Auto"/> <!-- Button占必要宽度 -->
            </Grid.ColumnDefinitions>
            
            <!-- 文本框 -->
            <TextBox x:Name="DomainTextBox" Grid.Column="0" 
                     FontSize="14" Height="30" Margin="0,0,5,0" 
                     VerticalAlignment="Center" HorizontalAlignment="Stretch"
                     KeyDown="DomainTextBox_KeyDown"
                     TextWrapping="Wrap" />
            
            <!-- 插入按钮 -->
            <Button x:Name="InsertButton" Grid.Column="1" 
                    Content="打印" Width="60" Height="30" 
                    VerticalAlignment="Center" HorizontalAlignment="Right"
                    Click="InsertButton_Click" />
        </Grid>

        <!-- 文本块 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="DomainTextBlock" Text="物流标贴打印开始" 
                       FontSize="14" Margin="0,10,0,0" 
                       TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Window>
